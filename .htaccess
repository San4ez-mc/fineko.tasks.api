# Мінімалістичний і сумісний з Hosting Ukraine варіант
RewriteEngine On

# Віддавати статичні файли/папки напряму
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Пропускаємо preflight (OPTIONS) у front controller
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^ index.php [L]

# Все інше — у Yii front controller
RewriteRule ^ index.php [L]
